{
    "name": "Download all image tabs",
    "description": "Finds all tabs that are just images, and downloads them.",
    "version": "0.0.1",
    "manifest_version": 2,
    "permissions": [
        "downloads",
        "tabs"
    ],
    "background":
    {
        "scripts": ["background.js"]
    },
    "page_action":
    {
        "browser_style": true,
        "default_title": "DL Image Tabs",
        "default_icon":
        {
            "38": "38.png",
            "19": "19.png"
        }
    },
    "applications":
    {
        "gecko":
        {
            "id": "dl-all@image.tabs"
        }
    }
}